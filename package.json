{
  "name": "@svar-ui/react-grid",
  "version": "2.3.1",
  "description": "Fast, feature-rich React DataGrid with virtual scrolling, cell editing, sorting, filtering, and accessibility support.",
  "productTag": "grid",
  "type": "module",
  "keywords": [
    "react",
    "reactjs",
    "react.js",
    "react-component",
    "react-grid",
    "react-datagrid",
    "react-data-grid",
    "react-table",
    "react-data-table",
    "react-datatable",
    "datagrid",
    "react-table-library",
    "sorting",
    "filtering",
    "pagination",
    "ui-components",
    "data-visualization",
    "virtual-scrolling",
    "react19",
    "svar-ui",
    "svar-react"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "BUILD_DEMOS=true vite build",
    "build:full-css": "BUILD_FULL_CSS=true vite build",
    "lint": "eslint . --report-unused-disable-directives",
    "preview": "vite preview",
    "prepare": "husky",
    "prettier": "prettier --write ./src/ ./demos/"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.es.js"
    },
    "./style.css": "./dist/index.css",
    "./all.css": "./dist-full/index.css"
  },
  "types": "./types/index.d.ts",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "sideEffects": false,
  "files": [
    "dist",
    "types",
    "package.json",
    "dist-full/index.css"
  ],
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@svar-ui/grid-data-provider": "2.3.0",
    "@svar-ui/grid-locales": "2.3.0",
    "@svar-ui/grid-store": "2.3.0",
    "@svar-ui/lib-dom": "0.9.2",
    "@svar-ui/lib-react": "1.1.1",
    "@svar-ui/lib-state": "1.9.6",
    "@svar-ui/lib-svelte": "0.5.2",
    "@svar-ui/react-core": "2.3.1",
    "@svar-ui/react-editor": "2.3.1",
    "@svar-ui/react-filter": "2.3.1",
    "@svar-ui/react-menu": "2.3.1"
  },
  "homepage": "https://svar.dev/react/datagrid/",
  "repository": {
    "type": "git",
    "url": "https://github.com/svar-widgets/react-grid.git"
  },
  "bugs": {
    "url": "https://forum.svar.dev"
  },
  "devDependencies": {
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "@vitejs/plugin-react": "5.0.2",
    "eslint": "9.35.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router": "7.8.2",
    "react-router-dom": "7.8.2",
    "vite": "7.1.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,js,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  }
}
